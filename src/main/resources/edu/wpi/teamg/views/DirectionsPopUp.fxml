<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.teamg.controllers.DirectionsPopUpController">
   <children>
      <VBox layoutX="10.0" layoutY="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="1000.0" spacing="16.0">
         <children>
            <HBox alignment="CENTER" prefWidth="453.0" VBox.vgrow="NEVER">
               <children>
                  <Label alignment="CENTER" prefHeight="32.0" prefWidth="140.0" text="Path From">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefWidth="453.0">
               <children>
                  <Text fx:id="lnStart" strokeType="OUTSIDE" strokeWidth="0.0" text="Long Name 1" />
                  <Label alignment="CENTER" prefHeight="32.0" prefWidth="140.0" text="To">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
                  <Text fx:id="lnEnd" strokeType="OUTSIDE" strokeWidth="0.0" text="Long Name 2" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefWidth="200.0">
               <children>
                  <TextArea fx:id="pathInstructions" prefHeight="500.0" prefWidth="1000.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefWidth="453.0" stylesheets="@style.css">
               <children>
                  <MFXButton fx:id="closePath" styleClass="add_Buttons" text="Close" />
                  <MFXButton fx:id="speakButton" styleClass="add_Buttons" text="Speak" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </padding>
      </VBox>
   </children>
