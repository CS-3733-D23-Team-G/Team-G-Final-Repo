#JSGF V1.0;

grammar HelloWorld;

public <greeting> = (hello | hi | hey) (there)?;

public <name> = (Alice | Bob | Charlie);

public <sentence> = <greeting> <name>;

public <command> = (open | close | quit) <application>;

public <application> = (notepad | calculator | browser);

public <message> = <sentence> | <command>;